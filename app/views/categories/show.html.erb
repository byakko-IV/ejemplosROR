<p id="notice"><%= notice %></p>

<div class="col-xs-12">
	<h1 class="center-xs">
	  <%= @category.name %>
	</h1>
	<h2>Articulos</h2>
	<br>
		<% @category.articles.each do |article| %>
				<h3><%= article.title %></h3>
				<p><%= article.text %></p>
				<p><%= link_to 'Show', article_path(article) %>
				<%= link_to 'Edit', edit_article_path(article) %>
				<%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></p>
		<% end %>
	<p>
	  <strong>Color:</strong>
	  <%= @category.color %>
	</p>
</div>

<div class="col-xs-12 center-xs">
	<%= link_to 'Edit', edit_category_path(@category) %> |
	<%= link_to 'Back', categories_path %>
</div>
